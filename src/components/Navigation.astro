---
import oudsLogo from "../assets/OUDS.svg";

const menuItems = [
  { name: "Home", href: "#home" },
  { name: "Services", href: "#services" },
  { name: "Products", href: "#products" },
  { name: "About", href: "#about" },
  { name: "Contact", href: "#contact" },
];
---

<nav
  id="nav"
  class="fixed top-10 left-0 right-0 z-50 border-border transition-transform duration-500 -translate-y-full"
>
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 border rounded-4xl backdrop-blur-md navigation_design"
  >
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div
        class="flex-shrink-0 cursor-pointer transform transition-transform duration-200 hover:scale-105"
      >
        <a href="/"
          ><img
            src={oudsLogo.src}
            class="nav_logo"
            width="40"
            height="30"
            alt="OUDS Homepage"
          /></a
        >
      </div>

      <!-- Desktop menu -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          {
            menuItems.map((item) => (
              <a
                href={item.href}
                class="text-foreground/80 hover:text-primary px-3 py-2 text-sm font-medium transition_font_hover transform hover:-translate-y-0.5"
              >
                {item.name}
              </a>
            ))
          }
        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:block">
        <button
          class="button_designs_one px-6 py-2 rounded-lg font-medium hover:bg-primary/90 transition-transform duration-200 hover:scale-105 active:scale-95"
        >
          Get Started
        </button>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          id="menu-btn"
          class="text-foreground hover:text-primary"
          aria-label="Toggle Menu"
        >
          <!-- Menu / Close icons -->
          <svg
            id="menu-icon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            id="close-icon"
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 hidden"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-card border-t border-border opacity-0 max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
  >
    <div class="px-2 pt-2 pb-3 space-y-1">
      {
        menuItems.map((item) => (
          <a
            href={item.href}
            class="text-foreground/80 hover:text-primary block px-3 py-2 text-base font-medium"
          >
            {item.name}
          </a>
        ))
      }
      <button
        class="w-full mt-4 bg-primary text-primary-foreground px-4 py-2 rounded-lg font-medium"
      >
        Get Started
      </button>
    </div>
  </div>
</nav>
