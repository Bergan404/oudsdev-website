---
// HeroSection.astro
import { ArrowRight, Code, Zap, Globe } from "@lucide/astro";

import circuitBackground from "../assets/circut_background_lowest.png";
import oudsFull from "../assets/OUDS_full.svg";
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center pt-16 px-4 sm:px-6 lg:px-8"
  style={{
    backgroundImage: `url(${circuitBackground.src})`,
    backgroundSize: "cover",
    backgroundRepeat: "no-repeat",
    backgroundPosition: "center",
    backgroundAttachment: "fixed",
  }}
>
  <div class="shadow_bottom_overlay"></div>
  <div class="max-w-7xl mx-auto text-center relative">
    <!-- Main heading -->
    <div class="space-y-6 animate-fade-in">
      <img src={oudsFull.src} class="hero_full_logo" alt="OUDS Development" />

      <p
        class="text-xl sm:text-2xl text-foreground/80 max-w-4xl mx-auto leading-relaxed animate-fade-in-delay"
      >
        We build <span
          class="text_design_gradient text-primary font-semibold animate-gradient"
          >cutting-edge applications</span
        > and provide
        <span
          class="text_design_gradient text-accent font-semibold animate-gradient"
        >
          professional web solutions</span
        > crafted from the ground up. Where innovation meets excellence.
      </p>
    </div>

    <!-- Feature highlights -->
    <div class="flex flex-wrap justify-center gap-6 mt-12 mb-12">
      <div
        class="focused_items flex items-center gap-3 backdrop-blur-sm border rounded-lg px-6 py-3 hover:scale-105 hover:-translate-y-1 transition-transform cursor-pointer animate-fade-in-delay-2"
      >
        <Code class="text_primary" size={20} />
        <span class="text-foreground font-medium">Custom Applications</span>
      </div>
      <div
        class="focused_items flex items-center gap-3 backdrop-blur-sm border rounded-lg px-6 py-3 hover:scale-105 hover:-translate-y-1 transition-transform cursor-pointer animate-fade-in-delay-2"
      >
        <Globe class="text_primary" size={20} />
        <span class="text-foreground font-medium">Web Solutions</span>
      </div>
      <div
        class="focused_items flex items-center gap-3 backdrop-blur-sm border rounded-lg px-6 py-3 hover:scale-105 hover:-translate-y-1 transition-transform cursor-pointer animate-fade-in-delay-2"
      >
        <Zap class="text_primary" size={20} />
        <span class="text-foreground font-medium">Tech Excellence</span>
      </div>
    </div>

    <!-- CTA buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a href="#contact">
        <button
          class="group button_designs_one px-8 py-4 rounded-lg font-semibold text-lg flex items-center gap-2 hover:bg-primary/90 transition-all hover:scale-105 active:scale-95 animate-fade-in-delay-3"
        >
          Start Your Project
          <ArrowRight
            class="group-hover:translate-x-1 transition-transform"
            size={20}
          />
        </button>
      </a>

      <!-- <button
        class="border focused_items backdrop-blur-sm px-8 py-4 rounded-lg font-semibold text-lg hover:bg-primary/10 transition-all hover:scale-105 active:scale-95 animate-fade-in-delay-3"
      >
        View Our Work
      </button> -->
    </div>
  </div>
</section>
